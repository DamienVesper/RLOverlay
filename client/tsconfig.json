{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",

        "moduleResolution": "Bundler",

        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte",
        "../shared/",
        "vite.config.ts",
        "global.d.ts"
, "src/img/icons/assist.svg"    ],
    "exclude": [
        "node_modules"
    ]
}
