{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "NodeNext",
        "target": "ESNext",

        "moduleResolution": "NodeNext",

        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "noEmit": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
